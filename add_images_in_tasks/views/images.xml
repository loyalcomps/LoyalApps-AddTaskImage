<odoo>
    <data>
        <!-- Existing view inheritance -->
        <record id="view_task_form_inherited" model="ir.ui.view">
            <field name="name">task.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Add Images With Description" autofocus="autofocus" class="page-red">
                    <field name="images" widget="one2many">
                        <tree>
                            <field name="name"/>
                            <field name="image" widget="image" options="{'size': [250, 250]}" class="oe_avatar"/>

                        </tree>
                        <form>
                            <field name="name"  style="word-wrap: break-word"/>
                            <field name="image" placeholder="Enter the description of the Image here"/>
<!--                            <field name="image_name" placeholder="Enter the description of the Image here"/>-->
                        </form>
                    </field>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>
